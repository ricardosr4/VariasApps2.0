<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="match_parent"
    tools:context=".menu.Menu">

  <Button
      android:id="@+id/btnSaludarApp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Saludo App"
      android:layout_margin="16dp"
      android:layout_marginTop="35dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnIMC"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="IMC App"
      android:layout_margin="16dp"
      android:layout_marginTop="35dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnSaludarApp" />

  <Button
      android:id="@+id/btnDatePicker"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Date Picker App"
      android:layout_margin="16dp"
      android:layout_marginTop="35dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnIMC" />

  <Button
      android:id="@+id/btnTimePicker"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Time Picker App"
      android:layout_margin="16dp"
      android:layout_marginTop="35dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnDatePicker" />



  </androidx.constraintlayout.widget.ConstraintLayout>